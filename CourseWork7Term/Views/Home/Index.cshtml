@{
    ViewBag.Title = "Мандаринка -";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title</h1>
            </hgroup>
            <p>
                Это удобный сервис для промотра актуальной информации о текущих сеансах фильмов в кинотеатрах Минска, а также для заказов билетов.
            </p>
        </div>
    </section>
}
<h3>Для продолжения работы можно выбрать:</h3>
@if (Request.IsAuthenticated)
{
    <ol class="round">
    <li class="one">
        @Html.ActionLink("Поиск", "Search", "Home")
    </li>

    <li class="two">
        @Html.ActionLink("Оценки", "Marks", "Home")
    </li>

    <li class="three">
        @Html.ActionLink("Корзина", "Basket", "Home")
    </li>
</ol>
}
else
{
    <ul>
        <li>@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Выполнить вход", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
