@model IEnumerable<CourseWork7Term.Models.session>

@{
    ViewBag.Title = "Сеансы";
}

<h2>Сеансы</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table>
    <tr>
        <th>
            Кинотеатр
        </th>
        <th>
            Фильм
        </th>
        <th>
            Начало сеанса
        </th>
        <th>
            Стоимость билета
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.cinema.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.film.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.start_time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ticket_cost)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { cinema_id=item.cinema_id, film_id = item.film_id }) |
            @Html.ActionLink("Подробнее", "Details", new { cinema_id=item.cinema_id, film_id = item.film_id }) |
            @Html.ActionLink("Удалить", "Delete", new { cinema_id = item.cinema_id, film_id = item.film_id })
        </td>
    </tr>
}

</table>

<div>
    <br />
    @Html.ActionLink("На страницу администратора", "Admin", "Home")
</div>