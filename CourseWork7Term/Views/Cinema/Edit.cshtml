@model CourseWork7Term.Models.cinema

@{
    ViewBag.Title = "Редактирование записи о кинотеатре";
}

<h2>Редактирование записи о кинотеатре</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>cinema</legend>

        @Html.HiddenFor(model => model.id)

        <div class="editor-label">
            Название
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.name)
            @Html.ValidationMessageFor(model => model.name)
        </div>

        <div class="editor-label">
            Местоположение
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.location)
            @Html.ValidationMessageFor(model => model.location)
        </div>

        <div class="editor-label">
            Время работы
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.work_time)
            @Html.ValidationMessageFor(model => model.work_time)
        </div>

        <div class="editor-label">
            Телефон
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.phone)
            @Html.ValidationMessageFor(model => model.phone)
        </div>

        <div class="editor-label"><b>Места</b></div>
        @{
            var places = ViewBag.Places;
            foreach (var place in places)
            {
                <input type="checkbox" name="selectedPlaces" value="@place.id"
                       @(Model.place.Contains(place) ? "checked=\"checked\"" : "") />
                    @Html.Raw(String.Format("Ряд {0} - место {1}", place.range, place.number)) <br />
            }
        }

        <p>
            <input type="submit" value="Сохранить" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("К списку кинотеатров", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
